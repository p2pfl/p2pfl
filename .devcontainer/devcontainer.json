// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"name": "P2PFL Development",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/python:1-3.12-bullseye",

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Install uv and sync dependencies after container is created
	"postCreateCommand": "curl -LsSf https://astral.sh/uv/install.sh | sh && uv sync --all-extras && echo 'source /workspaces/p2pfl/.venv/bin/activate' >> ~/.bashrc",

	// Configure tool-specific properties.
	"customizations": {
        "vscode": {
            // Add the IDs of extensions you want installed when the container is created.
            "extensions": [
              "ms-python.mypy-type-checker",
			  "charliermarsh.ruff",
			  "davidanson.vscode-markdownlint",
			  "github.copilot",
			  "zxh404.vscode-proto3",
			  "tamasfe.even-better-toml"
            ],
            // Set the Python interpreter to the virtual environment
            "settings": {
                "python.defaultInterpreterPath": "/workspaces/p2pfl/.venv/bin/python"
            }
          }
    }

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
